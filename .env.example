# StillOnTime Film Schedule Automation System
# Environment Configuration Template

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://stillontime_user:stillontime_password@localhost:5432/stillontime_automation

# Redis
REDIS_URL=redis://localhost:6379

# Vector Search (optional but recommended for AI features)
QDRANT_URL=http://localhost:6333

# Secrets
JWT_SECRET=your-jwt-secret-change-in-production
ENCRYPTION_SALT=your-64-character-encryption-salt

# Google OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# External APIs
OPENWEATHER_API_KEY=your-openweather-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
OPENAI_API_KEY=optional-openai-key-for-ai-features

# CodeNet RAG (optional)
CODENET_DATASET_PATH=./data/codenet
CODENET_MAX_EXAMPLES=10000
CODENET_ENABLE_RAG=false

# Feature Toggles
ENABLE_ENHANCED_PDF=true
ENABLE_ENHANCED_EMAIL=true
ENABLE_ENHANCED_ROUTING=true
ENABLE_ENHANCED_CALENDAR=true
ENABLE_AI_CLASSIFICATION=false

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="StillOnTime <noreply@stillontime.app>"

# Optional: SMS Configuration (for notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
